{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "E-commerce API with PDR + TDD + BDD in TypeScript using SQLite",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:bdd": "cucumber-js --require tests/features/*.ts --format progress-bar",
    "lint": "eslint src/**/*.ts",
    "migrate": "ts-node src/database/migrate.ts"
  },
  "keywords": ["ecommerce", "api", "typescript", "tdd", "bdd", "sqlite"],
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sql.js": "^1.10.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@types/chai": "^4.3.11",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "chai": "^4.3.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
